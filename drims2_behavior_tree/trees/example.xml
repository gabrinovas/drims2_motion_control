<root BTCPP_format="4" >
     <BehaviorTree ID="MainTree">
        <Sequence>
            <!-- 
            Example for OnRobot 2FG7 Gripper 
            Position range: 0.035 (closed) to 0.075 (open) meters total opening
            Max effort: 0-100 Newtons
            -->
            <GripperCommand action_name="/gripper_action" position="0.075" max_effort="50.0"/>
            <Sleep msec="1000" />
            <MoveToPose action_name="/move_to_pose" frame_id="base_link" position="0.4;0.0;0.3" orientation="0.0;0.0;0.0;1.0"/>
            <GripperCommand action_name="/gripper_action" position="0.035" max_effort="50.0"/>
            <Sleep msec="1000" />
            <MoveToJoint action_name="/move_to_joint" joint_target="-1.0;-1.83;1.4;5.0;4.9;-3.0"/>
            <GripperCommand action_name="/gripper_action" position="0.075" max_effort="50.0"/>
            <Sleep msec="1000" />
            <MoveToPose action_name="/move_to_pose" cartesian_motion="true" frame_id="tip" position="0.0;0.0;0.05" orientation="0.0;0.0;0.0;1.0"/>
        </Sequence>
     </BehaviorTree>
</root>  

